<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorScreenBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tnecesoc.MyInfoDemo.GlobalView.ShowProfileViewImpl">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <include layout="@layout/piece_others_profile"/>

        <!--Community-->
        <LinearLayout
                android:id="@+id/layout_contact_profile_community"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="48dp"
                android:baselineAligned="false">
            <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:text="@string/gui_community"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
            </LinearLayout>

            <LinearLayout
                    android:gravity="right|center_vertical"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">

                <TextView
                        android:id="@+id/lbl_contact_profile_community"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="community"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
            </LinearLayout>
        </LinearLayout>

        <!--Phone-->
        <LinearLayout
                android:id="@+id/layout_contact_profile_phone"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="48dp"
                android:baselineAligned="false">
            <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:layout_marginStart="16dp"
                        android:text="@string/gui_phone"
                        android:layout_marginEnd="16dp"/>
            </LinearLayout>

            <LinearLayout
                    android:gravity="right|center_vertical"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">

                <TextView
                        android:id="@+id/lbl_contact_profile_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:text="10000"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
            </LinearLayout>

        </LinearLayout>

        <!--Email-->
        <LinearLayout
                android:id="@+id/layout_contact_profile_email"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="48dp"
                android:baselineAligned="false">
            <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:text="@string/gui_email_address"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
            </LinearLayout>

            <LinearLayout
                    android:gravity="right|center_vertical"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">
                <TextView
                        android:textColor="@android:color/black"
                        android:background="@android:color/transparent"
                        android:id="@+id/lbl_contact_profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="info@mail.com"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
            </LinearLayout>

        </LinearLayout>

        <!--Address-->
        <LinearLayout
                android:id="@+id/layout_contact_profile_address"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="48dp"
                android:baselineAligned="false">
            <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:text="@string/gui_address"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
            </LinearLayout>

            <LinearLayout
                    android:gravity="right|center_vertical"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">
                <TextView
                        android:textColor="@android:color/black"
                        android:background="@android:color/transparent"
                        android:id="@+id/lbl_contact_profile_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="somewhere"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
            </LinearLayout>

        </LinearLayout>

        <Button
                android:id="@+id/btn_contact_profile_contact"
                android:text="@string/hint_follow_contact"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_primary"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/btn_contact_profile_message"
                android:text="@string/gui_send_message"
                android:textColor="@android:color/black"
                android:background="@drawable/btn_additional"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <Space android:layout_width="match_parent" android:layout_height="36dp"/>

    </LinearLayout>

</ScrollView>
