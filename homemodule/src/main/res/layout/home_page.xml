<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="#6495ed">


    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/top"
            android:padding="10dp"
            android:background="#6495ed"
            android:stretchColumns="1">
        <TableRow>
            <ImageButton
                    android:layout_marginLeft="10dp"
                    android:id="@+id/back"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:background="#00000000"
                    android:src="@drawable/black"/>
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="26dp"
                    android:text="汕头大学"/>
            <TextView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:layout_marginRight="10dp"
                    android:background="#00000000"/>
        </TableRow>
    </TableLayout>
    <Button
            android:id="@+id/send"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:minWidth="80dp"
            android:layout_marginRight="5dp"
            android:text="发贴"
            android:layout_below="@+id/top" android:layout_alignParentStart="true"/>
    <Button
            android:id="@+id/post_search"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:minWidth="80dp"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:text="搜索帖子" android:layout_below="@+id/top" android:layout_alignParentEnd="true"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/posts"
            android:background="#ffffff"
            android:layout_below="@+id/send" android:layout_alignParentStart="true"/>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@drawable/boder"
            android:layout_alignParentBottom="true"
            >
        <TableRow>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/bottom1"
                android:background="#84c1ff"
                android:gravity="center"
                android:layout_weight="1"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/bottom2"
                android:id="@+id/myCircle"
                android:gravity="center"
                android:background="#00000000"
                android:layout_weight="1"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/personal"
                android:src="@drawable/bottom3"
                android:gravity="center"
                android:background="#00000000"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>

